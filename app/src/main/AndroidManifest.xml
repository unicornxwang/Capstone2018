<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capstone.energytrade">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:name=".BluetoothApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".btPairing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".tradeEnergy" />
        <activity android:name=".setup_interface" />
        <activity android:name=".sell_interface" />
        <activity android:name=".system_setup" />
        <activity android:name=".buytouse" />
        <activity android:name=".buytobattery_complete" />
        <activity android:name=".buytouse_complete" />
        <activity android:name=".sell_complete" />
        <activity android:name=".system_status"></activity>
    </application>

</manifest>